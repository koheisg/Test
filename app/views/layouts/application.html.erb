  <body>
    <header class="header">
     <div class="inner">
      <div class="site-title">
        <img class="site-logo" src="/assets/logo_icon.png">
        <a href="/" class="site-title">wArally!<span class="site-sub-title">- お笑いライブ検索</span></a>
      </div>
        <nav class="user-menu">
          <ul class="user-menu-button">
            <li>
              <%= link_to new_event_path do %>
                <i class="fa fa-plus-circle"></i>
                <span>ライブ登録</span>
              <% end %>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to my_schedule_path do %>
                  <i class="fas fa-heart"></i>
                  <span class="user-menu-button-text">参加予定</span>
                  <% end %>
              </li>
            <% end %>
            <li>
              <%= link_to geinins_path do %>
                <i class="fas fa-address-book"></i>
                <span class="user-menu-button-text">芸人Wiki</span>
              <% end %>
            </li>
            <li>
              <%= link_to survey_path do %>
                <i class="fas fa-file-alt"></i>
                <span class="user-menu-button-text">アンケート結果</span>
              <% end %>
            </li>
          </ul>
        </nav>
        <% if user_signed_in? %>
          <div class="user-menu-right">
            <div class="pulldown">
              <div class="user-icon">
                <span style="background-image:url(<%= current_user.image_url %>)"></span>
              </div>
              <div class="pulldown-content">
                <p><%= current_user.nickname %></p>
                <ul>
                  <li>
                    <%= link_to user_path(current_user) do %>
                      <i class="fa fa-user-o"></i> Myページ
                    <% end %>
                  </li>
                  <li>
                    <%= link_to logout_path, :method => :delete do %>
                      <i class="fa fa-sign-out-alt"></i> ログアウト
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        <% else %>
          <div class="login-button">
            <%= link_to user_twitter_omniauth_authorize_path,class: "twitter-button" do %>
            <i class="fa fa-twitter"></i>
            <span>Twitterでログイン</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </header> 
    <%= yield %>
    <nav class="user-menu-sm">
      <ul class="user-menu-button-sm">
        <li>
          <%= link_to search_path do %>
            <span class="fas fa-search user-menu-icon"></span>
            <span class="user-menu-button-text">探す</span>
          <% end %>
        </li>
        <li>
          <%= link_to my_schedule_path do %>
            <span class="fas fa-heart user-menu-icon"></span>
